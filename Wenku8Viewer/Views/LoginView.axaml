<UserControl
    x:Class="Wenku8Viewer.Views.LoginView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Wenku8Viewer.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:LoginViewModel"
    FontFamily="微软雅黑"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <vm:LoginViewModel />
    </UserControl.DataContext>
    <StackPanel
        MinWidth="256"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Spacing="8">
        <TextBlock FontSize="20" Text="登录" />
        <TextBox Text="{Binding Username}" Watermark="账号" />
        <TextBox
            PasswordChar="·"
            Text="{Binding Password}"
            Watermark="密码" />
        <Button
            HorizontalAlignment="Stretch"
            Command="{Binding Login}"
            >登录</Button>
		<Button Content="test" Command="{Binding $parent[Window].DataContext.NavigateToCommand}" CommandParameter="MainViewModel" x:CompileBindings="False"/>
    </StackPanel>
</UserControl>
